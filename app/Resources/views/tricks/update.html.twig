{% extends 'tricks/add.html.twig' %}

{% block cardHeader %}
    <h2 class="text-center"><a href="{{ path('snowtricks_view', {'slug': trick.slug}) }}">{{ trick.name|upper }}</a></h2>
{% endblock %}

{% block updateImage %}
    {% if images is not empty %}
        <div class="row justify-content-end">
            <div class="col-sm-8">
                <div class="row">
                    {% for image in images %}
                        <div class="col-sm-3 updateImage">
                            <img src="{{ asset(image.url) }}" alt="">
                            <a href="{{ path('snowtricks_image_remove', {'id': image.id}) }}"><em>Supprimer cette image</em></a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block return %}
    <button id="return" href="{{ path('snowtricks_view', {'slug': trick.slug}) }}" class="btn btn-light">
        <i class="fa fa-chevron-left" aria-hidden="true"></i> Retour Ã  la figure
    </button>
{% endblock %}

{% block delete %}
    <button id="return" href="{{ path('snowtricks_view', {'slug': trick.slug}) }}" class="btn btn-light deleteButton">
        <i class="fa fa-trash-o" aria-hidden="true"></i> Supprimer cette figure
    </button>
{% endblock %}
