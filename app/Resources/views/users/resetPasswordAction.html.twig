{% extends 'layout.html.twig' %}

{% block title %}Réinitialisez le mot de passe{% endblock title%}

{% block body %}
	<div class="extraSmallContent">
		{{ include('flash.html.twig') }}
		<div class="card mb-5">
			<div class="card-header">
   				<h2 class="text-center">Réinitialisez votre mot de passe</h2>
			</div>
 			<div class="card-body">
				{{ form_start(userForm) }}
				{{ form_errors(userForm, {'attr': {'class': 'alert alert-danger'}}) }}
				<div class="list-group-item mb-2">
                    <div class="form-group row">
                    	{{ form_label(userForm.email, 'Email de votre compte', {'label_attr': {'class': ''}}) }}
                    	{{ form_widget(userForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group row">
						{{ form_label(userForm.plainPassword, 'Votre nouveau mot de passe', {'label_attr': {'class': ''}}) }}
						{{ form_widget(userForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				{{ form_widget(userForm.save, {'attr': {'class': 'btn btn-light'}, 'label' : 'Confirmer'}) }}
  				{{ form_end(userForm) }}
			</div>
		</div>
	</div>
{% endblock %}